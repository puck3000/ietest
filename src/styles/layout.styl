// -------------------------------------
// LAYOUT
// -------------------------------------

#app 
  position: relative;

h1, h2, h3 
    margin-bottom: .5rem;

main 
  padding-top: 5rem;
  @media screen and (min-width: 1080px)
    padding-top 4rem
  position: relative
section  
  position: relative
  padding: 4rem 2rem
  @media screen and (min-width: 1080px)
    padding: 4rem
  &.schwarz
    background-color vblack
  &.blau
    background-color vblue
  &.hellgruen
    background-color vlightgreen
  &.gruen
    background-color vgreen
  &.dunkelgruen
    background-color vdarkgreen
  &.rot
    background-color vred
  &.News:not(:last-child)
    margin-bottom: 1rem; 
  @media screen and (min-width: 1080px) 
    h2, p, .text li
      width: calc(80%)
      margin-bottom: .75rem
    img, table
      margin-bottom: .75rem
    .parallaxWrapper img 
      margin-bottom: 0
@media screen and (max-width: 1080px) 
  html, body, #app, main, footer, header
    width: 100vw;
main, footer
  @media screen and (min-width: 1080px) 
    max-width: 900px
    margin:auto
  @media screen and (min-width: 1600px) 
    max-width: 1300px
    margin:auto
@media screen and (max-width: 1080px)
  main, footer, .heroParallax, header  
    width: 100vw

figcaption 
  margin-bottom: 1rem

footer 
  position: relative
  color: black 
  a 
    color: black
  background-color vlightgrey
  .footerWrapper
      padding: 4rem 2rem 
      @media screen and (min-width: 1080px)
        padding: 4rem
      display: grid
      grid-template-columns: 1fr ;
      @media screen and (min-width: 600px )
          grid-template-columns: 1fr 1fr;
      grid-gap: 2rem
  #logoBLW,#logoID
    height: 3rem
      

// helpers and hacks
img // always responsive
  max-width: 100%;
main // hack for no css margin between sections
  font-size: 0


//--------------------------------------
// SUBNAV
// -------------------------------------
#subnav
  display: none
  @media screen and (min-width: 1080px)
    display: block
    a
      font-size: .75rem
      margin-right: 2rem
    position: absolute
    top: 5rem
    z-index: 9
    padding-left: 2rem

// -----------------------------
// Header general styles
// -----------------------------
header 
  position: fixed;
  z-index: 10
  min-height: 5rem
  text-transform:uppercase
  @media screen and (max-width: 1080px) 
    background-color: vred;
  h1
    margin: 0
  .logo > img 
    height 3rem

  h1, .logo > img 
    display: inline-block;


  &.laptop,
  &.desktop,
  &.xxldesktop
    min-height: 4rem
    .navElements
      background-color: vred;
    nav, ul, li
      display: inline-block;
    .headerWrapper, form 
      display: flex  
    nav ul 
      font-size: 0
  
  #langSwitcher
    font-size: 0
    @media screen and (min-width 1080px)
      li 
        display: inline-flex
        flex-direction: row
        align-items: center
        &:not(:last-child)
          border-right: 1px solid white
        a 
          padding: 0.75rem
//--------------------------------------
// HERO
// -------------------------------------

.hero 
  position: relative
  padding: 0
  h2
    position: absolute
    padding: 4rem 2rem
    @media screen and (min-width: 1080px )
      padding: 4rem
  img 
    margin-bottom: 0
 

//--------------------------------------
// weiche
// -------------------------------------

.weiche
    margin-top: 4rem
    display: grid
    grid-template-columns: 1fr ;
    @media screen and (min-width: 600px )
        grid-template-columns: 1fr 1fr;
    grid-gap: 2rem

//--------------------------------------
// call to action
// -------------------------------------

.cta
    margin-top: 4rem
    display: grid
    grid-template-columns: 1fr 
    grid-gap: 2rem
    @media screen and (min-width: 600px )
        grid-template-columns: 1fr 1fr
        .clicker 
            grid-column: 2 / 3

//--------------------------------------
// Embeds
// -------------------------------------

.embed 
  margin-bottom: 2rem
  iframe 
    max-width: 100% 
.responsive {
  position: relative;
  padding-bottom: 56.2%;
  height: 0;
  overflow: hidden;
}

.responsive iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

//--------------------------------------
// Suchresultate
// -------------------------------------
#suchresultate
  article
    margin-bottom: 1rem
    hr
      width: 5rem
      color: white
      border: white 1px solid 
      margin-top: 2rem
      margin-bottom: 2rem
    .frage 
      font-style: italic
      b 
        font-weight: bold
  h2
    margin-bottom: 2rem

    //--------------------------------------
    // print
    // -------------------------------------

  @media print
    header 
      display: none